<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite CardanoAPI" thread-count="5" verbose="1" parallel="classes" configfailurepolicy="continue">
    <parameter name="env" value="mainnet"/>
    <test name="Test CardanoAPI">
        <method-selectors>
            <method-selector>
                <script language="beanshell">
                    <![CDATA[
                        import java.util.ArrayList;
                        String whatGroups = System.getProperty("cardanoAPI.group")

                        if(whatGroups.isEmpty()){
                            return true;
                        }
                        if(!whatGroups.contains(","){
                           groups.containsKey(whatGroups)
                        }
                        String[] groupsList = whatGroups.split(",");

                        boolean flag = false;
                        for(String eachGroup : groupsList){
                            if(group.containsKey(eachGroup.trim()){
                                flag = true;
                            }
                        }
                        flag;
                    ]]>
                </script>
            </method-selector>
        </method-selectors>
        <classes>
            <class name="tests.tokens.TokenTest"/>
            <class name="tests.stake.StakeTests"/>
        </classes>
    </test>
</suite>